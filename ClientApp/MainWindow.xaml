<Window x:Class="ClientApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientApp"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="MainWindow" Height="600" Width="450"
        AllowsTransparency="True" Background="Transparent"
        WindowStyle="None" MouseDown="Window_MouseDown" ResizeMode="NoResize" Icon="/Images/music.png">
    <Grid>
        <Border CornerRadius="10" Grid.RowSpan="2">
            <Border.Background>
                <LinearGradientBrush>
                    <GradientStop Color="#32e6b3" Offset="0.2"/>
                    <GradientStop Color="#34a8eb" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <TextBlock Margin="150,150,150,420"
            FontWeight="Light"
            FontFamily="helvetica"
            FontSize="27"
            Foreground="White"
            HorizontalAlignment="Center"><Run Text="My music"/><Run/>
        </TextBlock>

        <Image Source="Images/note.png" Width="80" Height="80" Margin="150,60,150,460"/>

        <Label Name="Name_Song"
               Content="Name song" 
               Margin="50,240,50,330" 
               HorizontalContentAlignment="Center"
               FontSize="16"
               FontWeight="Bold">
        </Label>

        <Label Name="Current_Duraction"
               Content="0:00" 
               Margin="170,300,230,270" 
               HorizontalContentAlignment="Center"
               FontSize="16"
               FontWeight="Bold">
        </Label>

        <Label Content="/" 
               Margin="200,300,200,270" 
               HorizontalContentAlignment="Center"
               FontSize="16"
               FontWeight="Bold">
        </Label>

        <Label Name="Full_Duraction"
               Content="0:00" 
               Margin="230,300,170,270" 
               HorizontalContentAlignment="Center"
               FontSize="16"
               FontWeight="Bold">
        </Label>
        
        <Slider
            Width="250" 
            Margin="100,280,100,300"
            TickFrequency="5"
            Orientation="Horizontal"
            Minimum="0"
            Maximum="100"
            Value="0">
        </Slider>

        <Button Name="Button_Play" Height="40" Width="50" Margin="170,260,170,140">
            <Image Source="/ClientApp;component/Images/pause.png" Width="20" Height="20"/>
        </Button>
        <Button Name="Button_Next" Height="40" Width="50" Margin="240,260,100,140">
            <Image Source="/ClientApp;component/Images/next.png" Width="20" Height="20"/>
        </Button>
        <Button Name="Button_Previous" Height="40" Width="50" Margin="100,260,240,140">
            <Image Source="/ClientApp;component/Images/previous.png" Width="20" Height="20"/>
        </Button>

        <Button Name="Button_Shuffle" Height="30" Width="40" Margin="25,260,375,140">
            <Image Source="/ClientApp;component/Images/arrows.png" Width="8" Height="15"/>
        </Button>

        <Button Name="Button_Repeat" Height="30" Width="40" Margin="375,260,25,140" Cursor="Hand">
            <Image Source="/ClientApp;component/Images/repeat.png" Width="14" Height="10"/>
        </Button>

        <Button Name="Button_Add" Height="18" Width="60" Margin="20,280,370,300">
            <TextBlock
            FontWeight="Light"
            FontFamily="helvetica"
            FontSize="10"
            Foreground="White"
            HorizontalAlignment="Center"><Run Text="Add"/><Run/>
            </TextBlock>
        </Button>
        <Button Name="Button_Delete" Height="18" Width="60" Margin="370,280,20,300">
            <TextBlock
            FontWeight="Light"
            FontFamily="helvetica"
            FontSize="10"
            Foreground="White"
            HorizontalAlignment="Center"><Run Text="Delete"/><Run/>
            </TextBlock>
        </Button>

        <ListBox Name="ListMusic" 
                 Width="350" 
                 Margin="50,400,50,50" 
                 BorderThickness="2" 
                 BorderBrush="#34a8eb"
                 MouseEnter="ListMusic_MouseEnter"
                 MouseLeave="ListMusic_MouseLeave">
            <ListBoxItem Content="Song name 1"/>
            <ListBoxItem Content="Song name 2"/>
            <ListBoxItem Content="Song name 3"/>
            <ListBoxItem Content="Song name 4"/>
            <ListBoxItem Content="Song name 5"/>
        </ListBox>

        <Button Name="Button_Exit" 
                Width="18" 
                Height="18" 
                Margin="420,10,10,570"
                Background="#cc4949"
                Padding="0"
                Click="Button_Exit_Click">
            <Image Source="/ClientApp;component/Images/exit.png" Width="15" Height="15"/>
        </Button>

        <Button Name="Button_RollUp"
                Width="18" 
                Height="18" 
                Margin="385,10,40,570"
                Background="#e0d1d1"
                Padding="3,5,5,0"
                Click="Button_RollUp_Click">
            <Image Source="/ClientApp;component/Images/rollUp.png" Width="15" Height="15"/>
        </Button>
    </Grid>
</Window>
